.row-fluid
  .span12
    = simple_form_for(@report) do |f|
      = f.input(:name)
      = f.simple_fields_for(:joins, @report.joins.build(:root => true)) do |oj|
        = oj.input(:root, :as => :hidden)
        = oj.input(:foreign_table_name, :collection => Report.tables)

      = f.submit :class => 'btn-success'
