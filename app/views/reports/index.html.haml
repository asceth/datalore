%section
  .page-header
    .pull-right
      = link_to 'New Report', new_report_url, :class => 'btn btn-primary'
    %h1 Reports


  - @reports.group_by(&:category).map do |category, reports|
    %h2= category
    .row
      .span12
        %table.table.table-striped.table-bordered
          %thead
            %tr
              %th ID
              %th Name
          %tbody
            - reports.each do |report|
              %tr
                %td= report.id
                %td= link_to report.to_s, report_url(report)

